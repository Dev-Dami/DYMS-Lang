// types_demo.hg
// Demonstrates basic types and operations in DYMS

println("=== Type Demonstration ===")
println("")

// Booleans
let t = true
let f = false
println("Booleans:")
println("t = " + t)
println("f = " + f)
println("")

// Numbers
let num1 = 42
let num2 = 100
println("Numbers:")
println("num1 = " + num1)
println("num2 = " + num2)
println("num1 + 8 = " + (num1 + 8))
println("num2 / 10 = " + (num2 / 10))
println("")

// Strings
println("Strings:")
println("hi there")
let greeting = "Hello"
let name = "World"
println("Concatenation: " + greeting + " " + name)
println("")

// Arrays
let arr1 = [1, 2, 3]
let arr2 = [4, 5, 6]
let first = arr1[0]
let second = arr2[1]
println("Arrays:")
println("arr1[0] = " + first)
println("arr2[1] = " + second)
println("")

// Maps
let map1 = {"a": 1, "b": 2}
let vala = map1["a"]
let valb = map1["b"]
println("Maps:")
println("map1[a] = " + vala)
println("map1[b] = " + valb)
println("")

// Conditionals
println("Conditionals:")
if (1 < 2) {
    println("if works")
} else {
    println("if else failed")
}
println("")

// Loops
println("Loops:")
println("for i in [0..2]:")
for range(i, 3) {
    println("i = " + i)
}
println("")

let i = 0
println("while i < 3:")
while (i < 3) {
    println("i = " + i)
    i = i + 1
}