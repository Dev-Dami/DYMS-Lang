// Star pattern (right triangle)
let n = 5
let i = 0

while (i < n) {
    let j = 0
    while (j <= i) {
        printf("*")
        j = j + 1
    }
    println("")
    i = i + 1
}

// Pyramid star pattern
let rows = 5

let i = 1
while (i <= rows) {
    let spaces = repeat(" ", rows - i)
    let stars  = repeat("*", 2 * i - 1)
    println(spaces + stars)
    i = i + 1
}
